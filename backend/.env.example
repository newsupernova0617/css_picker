# Environment Variables for CSS Picker Backend
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-here-change-this
FLASK_ENV=development
FLASK_DEBUG=True

# Clerk Authentication
# Get these from: https://dashboard.clerk.com/
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Stripe Configuration  
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_premium_price_id

# Turso Database
# Get these from: https://app.turso.tech/
TURSO_DATABASE_URL=libsql://your-database-name.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token

# Application URLs (Update when deployed)
FRONTEND_URL=http://localhost:4242
BACKEND_URL=http://localhost:4242
CORS_ORIGINS=chrome-extension://your-extension-id,http://localhost:3000

# Chrome Extension
EXTENSION_ID=your-chrome-extension-id

# Development vs Production
ENVIRONMENT=development
PORT=4242