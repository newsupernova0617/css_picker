{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/success",
        "destination": "/success.html"
      },
      {
        "source": "/cancel",
        "destination": "/cancel.html"
      },
      {
        "source": "/terms-of-service",
        "destination": "/terms-of-service.html"
      },
      {
        "source": "/privacy-policy",
        "destination": "/privacy-policy.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}